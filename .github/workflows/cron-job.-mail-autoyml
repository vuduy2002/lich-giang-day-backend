name: Run Every Minute Vercel Job

on:
  schedule:
    # Chạy mỗi phút
    - cron: '* * * * *'
 workflow_dispatch: 
  
jobs:
  run-vercel-api:
    runs-on: ubuntu-latest

    steps:
      - name: Call Vercel API
        run: |
          curl -X GET https://lich-giang-day-backend.vercel.app/api/notifications
